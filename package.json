{
  "name": "iothub-js",
  "version": "1.0.0",
  "description": "IoT Hub Backend - Node.js TypeScript implementation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
