{
  "name": "iothub-js",
  "version": "1.0.0",
  "description": "IoT Hub Backend - Node.js TypeScript implementation",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && tsc && cpy \"src/public/**\" \"dist/public\"",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "pm2:start": "pm2 start ecosystem.config.js --only iothub-js",
    "pm2:dev": "pm2 start ecosystem.config.js --only iothub-js-dev",
    "deploy": "npm run build && pm2 restart ecosystem.config.js --only iothub-js --env production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "iot",
    "backend",
    "typescript",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "IoT Hub Team",
  "license": "ISC",
  "dependencies": {
    "@types/socket.io": "^3.0.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cpy-cli": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
