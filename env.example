# Server Configuration
NODE_ENV=development
PORT=6162
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-secure
JWT_EXPIRES_IN=3h
JWT_REFRESH_EXPIRES_IN=7d

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/iothub
MONGODB_DATABASE=iothub

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=scetru-test-bucket
AWS_S3_DASHBOARD_BUCKET=complete-table
AWS_REGION=us-east-1

# Email Configuration
SMTP_SERVER=smtp.office365.com
SMTP_FROM=no-reply@3lineng.com
SMTP_PORT=587
SMTP_USERNAME=no-reply@3lineng.com
SMTP_PASSWORD=your-smtp-password
SMTP_SSL=Y

# API Authentication
API_AUTH=your-api-auth-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info 