# Server Configuration
NODE_ENV=development
PORT=6162
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=3h
JWT_REFRESH_EXPIRES_IN=7d

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/iothub
MONGODB_DATABASE=iothub

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=scetru-test-bucket
AWS_S3_DASHBOARD_BUCKET=complete-table
AWS_REGION=us-east-1

# Email Configuration (matching Java implementation)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@iothub.com
SMTP_SSL=true

# API Authentication
API_AUTH=your-api-auth-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info 